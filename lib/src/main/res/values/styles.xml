<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="XmAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="title_bar_color">?colorPrimary</item>
        <item name="title_bar_title_color">@color/title_bar_title_color</item>
        <item name="title_bar_title_size">17dp</item>
        <item name="title_bar_back_icon">@drawable/icon_title_bar_back</item>
        <item name="title_bar_enable_divider">true</item>
        <item name="title_bar_right_text_color">@color/title_bar_title_color</item>
        <item name="title_bar_right_text_size">16dp</item>
        <item name="status_bar_color">?title_bar_color</item>
        <item name="status_bar_text_is_white">false</item>
    </style>

    <style name="customDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="customTranslateDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="BottomSheet" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
